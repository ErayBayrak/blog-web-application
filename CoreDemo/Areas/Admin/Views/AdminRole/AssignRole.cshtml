@model List<AssignRoleViewModel>
@{
    ViewData["Title"] = "AssignRole";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<form method="post">
    @for (int i = 0; i < Model.Count; i++)
    {
        <div class="form-check">
            <input type="hidden" asp-for="@Model[i].RoleId" />
            <input type="hidden" asp-for="@Model[i].RoleName" />
            <input type="checkbox" asp-for="@Model[i].RoleExists" class="form-check-input"/>
            <label class="form-check-label" for="@Model[i].RoleExists">@Model[i].RoleName</label>
        </div>
    }
    <button class="btn btn-primary">Değişiklikleri Kaydet</button>
</form>
<br />
<a href="/Admin/AdminRole/GetListUser/" class="btn btn-primary">Kullanıcı Listesine Dön</a>

