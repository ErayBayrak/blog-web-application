@using EntityLayer.Concrete
@model List<AppUser>
@{
    ViewData["Title"] = "GetListUser";
    Layout = "~/Views/Shared/AdminLayout.cshtml";
}

<h1>Kullanıcı Listesi</h1>

<table class="table table-bordered table-hover text-center">
    <tr>
        <th>Kullanıcı</th>
        <th>Rol Atama</th>
    </tr>
    @foreach (var item in Model)
    {
        <tr>
            <td>@item.UserName</td>
            <td><a href="/Admin/AdminRole/AssignRole/@item.Id" class="btn btn-success">Rol Ata</a></td>
        </tr>
    }
    <tr></tr>
</table>
<a href="/Admin/AdminRole/Index/" class="btn btn-success">Rol Listesine Dön</a>