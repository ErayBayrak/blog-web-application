@model EntityLayer.Concrete.Message2
@{
    ViewData["Title"] = "SendMessage";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<h1>Mesaj Gönderme Sayfası</h1>
<br>
@using (Html.BeginForm("SendMessage", "Message", FormMethod.Post))
{
    @Html.Label("Alıcı")
    @*@Html.TextBoxFor(x => x.SenderUser, new { @class = "form-control" })*@
    <input type="text" class="form-control" />
    
    <br />
    @Html.Label("Konu")
    @Html.TextAreaFor(x => x.Subject, 15, 3, new { @class = "form-control" })
    
    <br />
    @Html.Label("Mesaj")
    @Html.TextBoxFor(x => x.MessageDetails, new { @class = "form-control" })
    
   
    <br />
    <button class="btn btn-primary">Ekle</button>
}


