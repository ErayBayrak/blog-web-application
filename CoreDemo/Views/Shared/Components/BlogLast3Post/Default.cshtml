@using EntityLayer.Concrete
@model List<Blog>
@{
    Layout = null;
}

@foreach (var x in Model)
{
    <div class="blog-grids row mb-3">
        <div class="col-md-5 blog-grid-left">
            <a href="/Blog/BlogReadAll/@x.BlogID">
                <img src="@x.BlogImage" class="card-img-top img-fluid" alt="">
            </a>
        </div> 
        <div class="col-md-7 blog-grid-right">

            <h5>
                <a href="/Blog/BlogReadAll/@x.BlogID">
                    @(x.BlogContent.Length > 50 ? x.BlogContent.Substring(0, x.BlogContent.Substring(0,50).LastIndexOf(" "))+"..." : x.BlogContent +"...")
                </a>
            </h5>
            <div class="sub-meta">
                <span>
                    <i class="far fa-clock"></i> @(((DateTime)x.BlogCreateDate).ToString("dd-MMM-yyyy"))
                </span>
            </div>
        </div>

    </div>
}