@model CoreDemo.Models.AddProfileImage
@{
    ViewData["Title"] = "WriterAdd";
    Layout = "~/Views/Shared/WriterLayout.cshtml";
}

<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yazar Profil Güncelleme</h4>

            <form method="post" class="forms-sample" enctype="multipart/form-data">
                <input type="hidden" class="form-control" id="exampleInputName1" asp-for="WriterID" placeholder="ID">
                <div class="form-group">
                    <label for="exampleInputName1">Ad Soyad</label>
                    <input type="text" class="form-control" id="exampleInputName1" asp-for="WriterName" placeholder="Name">
                    @Html.ValidationMessageFor(x => x.WriterName)
                </div>

                <div class="form-group">
                    <label for="exampleInputEmail3">Email</label>
                    <input type="email" class="form-control" id="exampleInputEmail3" asp-for="WriterMail" placeholder="Email">
                </div>
                @Html.ValidationMessageFor(x => x.WriterMail)
                <div class="form-group">
                    <label for="exampleInputPassword4">Şifre</label>
                    <input type="password" class="form-control" id="exampleInputPassword4" asp-for="WriterPassword" placeholder="Password">
                </div>
                @Html.ValidationMessageFor(x => x.WriterPassword)
                <div class="form-group">
                    <label>Resim Yükleyin</label>
                    <input type="file" name="WriterImage">
                </div>

                <div class="form-group">
                    <label for="exampleTextarea1">Yazar Hakkında</label>
                    <textarea class="form-control" id="exampleTextarea1" asp-for="WriterAbout" cols="3" rows="10"></textarea>
                </div>

                <input type="submit" value="Kaydet" class="btn btn-gradient-primary mr-2">
                <button class="btn btn-light">İptal</button>
            </form>

        </div>
    </div>
</div>
